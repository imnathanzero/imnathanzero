echo 'Initialize ROM and Device manifests'
rm -rf .repo/local_manifests &&
git clone -q https://github.com/imnathanzero/RMX1941_local_manifests.git -b arrow-13 .repo/local_manifests
repo init -u https://github.com/ArrowOS-T/android_manifest.git -b arrow-13.1

# Sync the repositories
echo "Sync begin"
repo sync -j8 --no-tags --no-clone-bundle --current-branch

. build/envsetup.sh

# Build the ROM
export BUILD_USERNAME=nathan
export BUILD_HOSTNAME=supeRuser
echo "BUILD STARTS NOW"
lunch arrow_RMX1941-userdebug
m bacon
