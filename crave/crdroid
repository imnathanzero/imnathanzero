# Initialize ROM and clone Device manifests
echo 'Initialize ROM and Device manifests'
rm -rf .repo/local_manifests &&
repo init -u https://github.com/crdroidandroid/android.git -b 12.1 --git-lfs
git clone https://github.com/imnathanzero/local_manifests_zzz -b crot .repo/local_manifests

# Sync the repositories
echo "Sync begin"
/opt/crave/resync.sh  && repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8


echo 'Setup Environment begins'
. build/envsetup.sh

# Build the ROM
export USE_CCACHE=1
export BUILD_USERNAME=nathannxx
export BUILD_HOSTNAME=omkegams
echo "BUILD STARTS NOW !!!"
lunch lineage_RMX1941-userdebug
brunch "RMX1941"
