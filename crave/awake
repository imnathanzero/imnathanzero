echo 'Initialize ROM and Device manifests'
rm -rf .repo/local_manifests &&
git clone https://github.com/imnathanzero/RMX1941_local_manifests.git -b xd-13 .repo/local_manifests
repo init -u https://github.com/xdroid-oss/xd_manifest -b thirteen

# Sync the repositories
echo "Sync begin"
repo sync -c -j8 --force-sync --no-clone-bundle --no-tags

. build/envsetup.sh

# Build the ROM
export BUILD_USERNAME=nathan
export BUILD_HOSTNAME=supeRuser
echo "BUILD STARTS NOW"
lunch xdroid_RMX1941-userdebug
make xd -j7
