echo 'Initialize ROM and Device manifests'
rm -rf .repo/local_manifests &&
repo init --depth=1 --no-repo-verify -u https://github.com/AfterLifePrjkt13/android_manifest.git -b LTS -g default,-mips,-darwin,-notdefault
git clone https://github.com/imnathanzero/android_device_realme_RMX1941 --depth 1 -b af device/realme/RMX1941
git clone https://github.com/imnathanzero/kernel_realme_RMX1941 --depth 1 -b cassia kernel/realme/RMX1941
git clone https://github.com/P-Salik/android_vendor_realme_RMX1941 --depth 1 -b tiramsu vendor/realme/RMX1941
git clone https://github.com/imnathanzero/android_vendor_realme_RMX1941-ims.git --depth 1 -b tiramsu vendor/realme/RMX1941-ims
rm -rf prebuilts/clang/host/linux-x86/clang-r353983c
git clone https://github.com/P-Salik/android_prebuilts_clang_host_linux-x86_clang-5484270.git --depth 1 -b 9.0.3 prebuilts/clang/host/linux-x86/clang-r353983c
rm -rf prebuilts/gcc/linux-x86/aarch64/aarch64-linux-gnu-7.5
git clone https://github.com/P-Salik/android_prebuilts_gcc_linux-x86_aarch64_aarch64-linux-gnu-7.5.git --depth 1 -b master prebuilts/gcc/linux-x86/aarch64/aarch64-linux-gnu-7.5
git clone https://github.com/ArrowOS/android_device_mediatek_sepolicy_vndr.git --depth 1 -b arrow-13.0 device/mediatek/sepolicy_vndr
rm -rf prebuilts/clang/host/linux-x86/clang-r450784d
git clone https://gitlab.com/tejas101k/clang-r450784d.git --depth 1 -b master prebuilts/clang/host/linux-x86/clang-r450784d

# Sync the repositories
echo "Sync begin"
nano .repo/manifests/snippets/afterlife.xml;
nano .repo/manifests/snippets/arrow.xml;
nano .repo/manifests/snippets/lineage.xml
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8

. build/envsetup.sh

# Build the ROM
export BUILD_USERNAME=nathan
export BUILD_HOSTNAME=supeRuser
echo "BUILD STARTS NOW"
lunch afterlife_RMX1941-userdebug
m afterlife -j7
